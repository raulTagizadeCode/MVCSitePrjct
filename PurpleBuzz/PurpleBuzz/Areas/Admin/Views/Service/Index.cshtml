@using PurpleBuzz.Models
@model IEnumerable<Service>;
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">ImgUrl</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
            <a asp-controller="category" asp-action="Create">
                <button type="button" class="btn btn-primary">Create</button>
            </a>

        </tr>
    </thead>
    <tbody>
        @foreach (Service item in Model)
        {
            <tr>
                <th scope="row">1</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.ImgUrl</td>
                <td>
                    <a asp-controller="category" asp-action="Update" asp-route-id="@item.ID">
                        <button type="button" class="btn btn-primary">Update</button>
                    </a>
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.ID">
                        <button type="button" class="btn btn-primary">Delete</button>
                    </a>
                </td>

            </tr>
        }

    </tbody>
</table>